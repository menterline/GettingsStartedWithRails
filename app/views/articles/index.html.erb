<h1><div style="text-align: center">Matt's Blog</h1>
<h2><div style="text-align: center">Talking stuff about things</h2>
<table align="center">
  <tr>
    <th><h2>Title</h2></th>
    <th><h2>Text</h2></th>
    <th colspan="3"><h2>Actions</h2></th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><div style="text-align: center"><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Show', article_path(article) %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Delete', article_path(article),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>

<div style="text-align: right"><%= link_to 'Add New Post', new_article_path %>
